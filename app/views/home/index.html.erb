<div class="container mt-5">
  <h1 class="text-center mb-4">週間映画ランキング</h1>
  <div class="row">
    <% @movies.each do |movie| %>
      <div class="col-md-6 mb-4">
        <div class="card h-100 shadow-sm">
          <div class="card-header bg-white d-flex justify-content-between align-items-center">
            <div>
              <h2 class="h5 mb-0"><%= link_to movie.name, movie_path(movie) %></h2>
              <p class="mb-0 text-secondary">過去30日分の予約数</p>
            </div>
            <h2 class="h5 mb-0"><%= movie.rankings.where(date: @date_range).count.to_s(:delimited) %> reservations!</h2>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
