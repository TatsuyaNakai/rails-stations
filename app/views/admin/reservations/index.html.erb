<div class="admin-content">
  <table class="table table-striped table-bordered table-hover">
    <thead class="thead-dark">
      <tr>
        <th>id</th>
        <th>date</th>
        <th>email</th>
        <th>name</th>
        <th>movie</th>
        <th>sheet</th>
        <th>created_at</th>
        <th>updated_at</th>
        <th colspan="3">Actions</th>
      </tr>
    </thead>

    <tbody>
      <% @reservations.each do |reservation| %>
        <tr>
          <td><%= link_to reservation.id, edit_admin_reservation_path(reservation) %></td>
          <td><%= reservation.date %></td>
          <td><%= reservation.email %></td>
          <td><%= reservation.name %></td>
          <td><%= reservation.schedule.movie.name %></td>
          <td><%= reservation.sheet.position %></td>
          <td><%= reservation.created_at %></td>
          <td><%= reservation.updated_at %></td>
          <td><%= link_to '詳細', admin_reservation_path(reservation), class: 'btn btn-primary btn-sm' %></td>
          <td><%= link_to '編集', edit_admin_reservation_path(reservation), class: 'btn btn-primary btn-sm' %></td>
          <td><%= link_to '削除', admin_reservation_path(reservation), method: :delete, data: { confirm: '削除してもよろしいですか？' }, class: 'btn btn-danger btn-sm' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <div class="text-center mt-4">
    <%= link_to '新規作成', new_admin_reservation_path, class: 'btn btn-success' %>
  </div>
</div>
