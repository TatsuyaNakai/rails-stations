<div class="reservation-details">
  <h2 class="mt-3">ID: <%= @reservation.id %></h2>
  <p><strong>日付:</strong> <%= @reservation.date %></p>
  <p><strong>予約者メールアドレス:</strong> <%= @reservation.email %></p>
  <p><strong>予約者氏名:</strong> <%= @reservation.name%></p>
  <p><strong>作品:</strong> <%= @reservation.schedule.movie.name %></p>
  <p><strong>座席:</strong> <%= @reservation.sheet.position %></p>
  <p><strong>作成日時:</strong> <%= l(@reservation.created_at) %></p>
  <p><strong>更新日時:</strong> <%= l(@reservation.updated_at) %></p>

  <div class="mt-4">
    <%= link_to '予約一覧', admin_reservations_path, class: 'btn btn-secondary' %>
  </div>
</div>
