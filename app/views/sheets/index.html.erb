      </tr>
      <tr>
        <td>B</td>
        <% @sheets.select { |sheet| sheet.row == 'b' }.each do |sheet| %>
          <td class="highlight"></td>
        <% end %>
        <td>B</td>
      </tr>
      <tr>
        <td>C</td>
        <% @sheets.select { |sheet| sheet.row == 'c' }.each do |sheet| %>
          <td class="highlight"></td>
        <% end %>
        <td>C</td>
      </tr>
    </tbody>
  </table>
</div>