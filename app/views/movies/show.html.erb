<div class="container my-4">
  <div class="row">
    <div class="col-md-4">
      <div class="movie-image">
        <%= image_tag(@movie.image_url, class: 'img-fluid rounded') if @movie.image_url.present? %>
      </div>
    </div>
    
    <div class="col-md-8">
      <div class="movie-info">
        <p class="status">
          <%= @movie.is_showing ? '公開中' : '終了' %>
        </p>
        <h2 class="mt-3"><%= @movie.name %></h2>
        <p><strong>Release Year:</strong> <%= @movie.year %></p>
        <p class="description">
          <%= @movie.description %>
        </p>
      </div>
    </div>
  </div>

  <div class="schedule mt-5">
    <h3>上映スケジュール</h3>
    <ul class="list-group">
      <li class="list-group-item">2032年 10月11日 15:00~17:12</li>
      <li class="list-group-item">2032年 10月11日 17:30~19:42</li>
      <li class="list-group-item">2032年 10月11日 20:00~22:12</li>
      <li class="list-group-item">2032年 10月12日 15:00~17:12</li>
      <li class="list-group-item">2032年 10月12日 17:30~19:42</li>
      <li class="list-group-item">2032年 10月12日 20:00~22:12</li>
      <li class="list-group-item">2032年 10月13日 12:00~14:12</li>
    </ul>
  </div>

  <div class="mt-4">
    <%= link_to 'Back', movies_path, class: 'btn btn-secondary' %>
  </div>
</div>
